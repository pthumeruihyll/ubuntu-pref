#!/usr/bin/yong-config
#Yong输入法配置文件

[DESC]
#配置文件版本
version=2

[IM]
default=5
#0=yong
#1=wubi
#2=zhengma
#3=erbi
#4=gbk
5=pinyin

#候选字个数
cand=6
#简繁转换
#简繁一对多转换
s2t_m=0
#汉字过滤 0:不过滤 1：常用汉字
filter=0
#默认启动
enable=1
#皮肤
skin=skin/佛手合十 
#回车键行为 clear:清编码 commit:上屏首选
#enter=clear
#数字键行为
#num=push
#半角出全角空格
#space=full
#预编辑模式 0:禁用 1:启用
#预编辑类型 0:候选 1:编码
preedit=0
#自动调频
auto_move=2
#历史记录
#history=history.txt
#小键盘 0:默认 1:不作为编码键 2:出数字
keypad=0
space=default
enter=default
sym_in_num=.,:
CNen_commit=1
lang=1
ABCD=1

[main]
#用户的配置文件编辑器
edit=
#显示托盘图标
tray=1
#不显示主窗口
#状态栏半透明
#主窗口位置 0:右下 1:顶部居中 2:左下
pos=2
noshow=1

[input]
#编码提示
hint=1
#不使用光标跟随
#不显示输入窗口
noshow=0
#候选显示长度
strip=9
font=OPPO Sans 4.0 13

[key]
#打开输入法
#二三重码选择
#中英文切换
CNen=LSHIFT RSHIFT
#临时英语模式
#切换输入法
#翻页
page=PGUP PGDN
#以词定字
#汉字过滤
#调词频
#显示输入条
#一键切换到输入法
#笔画引导
bihua=NONE
#切换全角半角
corner=NONE
#中英文标点
biaodian=NONE
#软键盘
keyboard=NONE
#单字模式
zi_switch=NONE
#拼音匹配快捷键
py_switch=NONE
#填词或者删词
add=NONE
del=NONE
#编码查询
query=NONE

[yong]
name=永码
engine=libmb.so
arg=mb/yong.txt

[wubi]
name=五笔
engine=libmb.so
arg=mb/wbx.txt

[zhengma]
name=郑码
engine=libmb.so
arg=mb/zhengma.txt

[erbi]
name=二笔
engine=libmb.so
arg=mb/erbi.txt

[gbk]
name=内码
engine=libgbk.so

[pinyin]
name=拼音
engine=libmb.so
arg=mb/pinyin.txt
overlay=mb/pinyin.ini

[sync]
